extends base
block content
    main.main
        div.card-container
          each tour in tours
              div.card
                  div.card__header
                      div.card__picture
                          div.card__picture-overlay &nbsp;
                              img(src='img/tours/' +  tour.imageCover)(alt= tour.name).card__picture-img
                          h3.heading-tertirary
                              span #{tour.name}
                  div.card__details
                      h4.card__sub-heading #{tour.difficulty} #{tour.duration}-day tour
                      p.card__text #{tour.summary}
                      div.card__data
                          svg.card__icon
                              use(xlink:href='img/icons.svg#icon-map-pin')
                          span #{tour.startLocation.description}
                      each tData in tour.startDates
                        div.card__data
                            svg.card__icon
                                use(xlink:href='img/icons.svg#icon-calendar')
                            span #{tData.toLocaleDateString('en-us', {  year:"numeric", month:"short", day:"numeric"})}
                  div.card__footer
                      p
                          span.card__footer-value #{tour.price}$
                          span.card__footer-text  per person
                      p.card__ratings
                          span.card__footer-value #{Math.round(tour.ratingsAverage * 10) / 10}
                          span.card__footer-text  rating (#{tour.ratingsQuantity})
                      a(href='/tour/' + tour.slug)(target='_blank').btn.btn--green.btn--small Details
